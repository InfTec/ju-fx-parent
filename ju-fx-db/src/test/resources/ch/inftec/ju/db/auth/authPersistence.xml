<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="juAuth">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>ch.inftec.ju.db.auth.entity.AuthUser</class>
		<class>ch.inftec.ju.db.auth.entity.AuthRole</class>
		
		<!-- Having some problems with entity/repo lookup after JU migration. For simplicity's sake, we'll just add
		     the missing entities here to satisfy Spring dependencies
		 -->
		<class>ch.inftec.ju.testing.db.data.entity.Player</class>
		<class>ch.inftec.ju.testing.db.data.entity.Team</class>
		<class>ch.inftec.ju.testing.db.data.entity.TestingEntity</class>

		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />

			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:juAuthTestDB;create=true" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="ch.inftec.ju.flags" value="connection,test" />
			
		</properties>
	</persistence-unit>

</persistence>